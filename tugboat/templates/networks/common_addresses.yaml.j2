---
schema: pegleg/CommonAddresses/v1
metadata:
  schema: metadata/Document/v1
  name: common-addresses
  layeringDefinition:
    abstract: false
    layer: site
  storagePolicy: cleartext
data:
  ksn:
    ip_autodetection_method: interface=bond1.{{ data['network']['ksn_vlan']}}
    etcd:
      service_ip: 10.96.232.136
    ip_rule:
      gateway: {{ data['network']['ksn_gw']}}
      overlap_cidr: 10.96.0.0/15 
    bgp:
      ipv4:
        public_service_cidr: {{ data['network']['bgp']['public_service_cidr'] }}
        ingress_vip: {{ data['network']['bgp']['ingress_vip'] }}
        peers:
{% for peer in data['network']['bgp']['peers'] %}
          - {{ peer }}
{% endfor %}
  dns:
    cluster_domain: cluster.local
    service_ip: 10.96.0.10
    upstream_servers:
{% for server in data['network']['dns_servers'] %}
      - {{ server }}
{% endfor %}
    upstream_servers_joined: {{ data['network']['dns_servers']|join(',')}}
    ingress_domain: {{ data['network']['dns']['domain'] }}

  genesis:
    hostname: {{ data['hosts']['genesis']['name'] }}
    ip: {{ data['network']['genesis_ip'] }}

  bootstrap:
    ip: {{ data['hosts']['genesis']['pxe'] }}

  kubernetes:
    api_service_ip: 10.96.0.1
    etcd_service_ip: 10.96.0.2
    pod_cidr: 172.26.0.0/15
    service_cidr: 10.96.0.0/16
    apiserver_port: 6443
    haproxy_port: 6553
    service_node_port_range: 30000-35357

  etcd:
    container_port: 2379
    haproxy_port: 2378

  masters:
{% for host in data['hosts']['masters'] %}
    - hostname: {{ host }}
{% endfor %}

  workers:
{% for host in data['hosts']['workers'] %}
    - hostname: {{ host }}
{% endfor %}

  proxy:
    http: {{ data['network']['proxy']['http'] }}
    https: {{ data['network']['proxy']['https'] }}
    no_proxy: '10.96.0.1,*.cluster.local'

  node_ports:
    drydock_api: 30000
    maas_api: 30001
    maas_proxy: 31800 # hardcoded in maas
    shipyard_api: 30003
    airflow_web: 30004

  ntp:
    servers_joined: {{ data['network']['ntp_servers']|join(',') }}

  ldap:
    base_url: {{ data['network']['ldap']['base_url'] }}
    url: {{ data['network']['ldap']['url'] }}
    auth_path: DC=testitservices,DC=atttest,DC=com?sAMAccountName?sub?memberof=CN={{ data['network']['ldap']['common_name'] }},OU=Application,OU=Groups,DC=testitservices,DC=atttest,DC=com
    common_name: {{ data['network']['ldap']['common_name'] }}
    subdomain: {{ data['network']['ldap']['subdomain'] }}
    domain: {{ data['network']['ldap']['domain'] }}

  domain:
    url: {{ data['network']['dns']['domain']| lower() }}

  storage:
    ceph:
      public_cidr: {{ data['network']['ceph_cidr'] }}
      cluster_cidr: {{ data['network']['ceph_cidr'] }}

  neutron:
    tunnel_device: bond1.{{ data['network']['overlay_vlan'] }}
    external_iface: bond1

  openvswitch:
    external_iface: 'bond1'
...
