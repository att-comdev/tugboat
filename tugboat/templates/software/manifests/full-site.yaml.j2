---
schema: armada/Manifest/v1
metadata:
  schema: metadata/Document/v1
{% if data['deploy-config'] is not none %}
  name: 'full-site'
{% else %}
    name: '{{ data['deploy-config'] }}'
{% endif %}
  layeringDefinition:
    abstract: false
    layer: site
    parentSelector:
      name: full-site-global
    actions:
      - method: merge
        path: .
  storagePolicy: cleartext
data:
  release_prefix: clcp
  chart_groups:
    - kubernetes-proxy
    - kubernetes-container-networking
    - kubernetes-dns
    - kubernetes-etcd
    - kubernetes-haproxy
    - kubernetes-core
    - ingress-kube-system
    - ucp-ceph-update
    - ucp-ceph-config
    - ucp-core
    - ucp-keystone
    - ucp-divingbell
    - ucp-armada
    - ucp-deckhand
    - ucp-drydock
    - ucp-promenade
    - ucp-shipyard
    - osh-infra-ingress-controller
    - osh-infra-ceph-config
    - osh-infra-logging
    - osh-infra-monitoring
    - osh-infra-mariadb
    - osh-infra-dashboards
    - openstack-ingress-controller
    - openstack-ceph-config
    - openstack-mariadb
    - openstack-memcached
    - openstack-keystone
    - openstack-radosgw
    - openstack-glance
